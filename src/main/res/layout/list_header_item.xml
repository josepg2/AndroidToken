<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@android:color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/token_number"
            android:layout_centerVertical="true"
            android:textColor="@color/colorPrimary"
            android:layout_marginStart="10dp"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <CheckBox
            android:text="Available"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="17dp"
            android:id="@+id/check_box"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true" />



    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:paddingBottom="3dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:orientation="horizontal"
        android:weightSum="100"
        android:background="@android:color/white">

        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_list"
            android:background="@drawable/list_button_left"
            android:text="ALL"
            android:textColor="#0d494b"
            android:gravity="start|center"
            android:layout_weight="27"
            android:id="@+id/list_all_tokens" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/buttonBarButtonStyle"
            android:drawableStart="@drawable/ic_featured_play_list"
            android:text="UNATTENTED"
            android:textColor="#0d494b"
            android:gravity="start|center"
            android:background="@drawable/list_button_right_dark"
            android:layout_weight="40"
            android:id="@+id/list_unattented_tokens" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/buttonBarButtonStyle"
            android:drawableStart="@drawable/ic_keyboard"
            android:layout_marginStart="3dp"
            android:text="TOKEN "
            android:textColor="#0d494b"
            android:gravity="start|center"
            android:background="@drawable/next_button_ripple"
            android:layout_weight="33"
            android:id="@+id/enter_token_number"/>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/list_bottom_line" />


</LinearLayout>